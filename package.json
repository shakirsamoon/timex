{
  "name": "timex",
  "version": "1.0.0",
  "description": "Countdown timer but better",
  "main": "main.js",
  "author": "Shakir Samoon",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.shakirsamoon.timex",
    "productName": "Timex",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "preload-widget.js",
      "index.html",
      "widget.html",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "portable": {
      "artifactName": "Timex.${ext}"
    },
    "asar": true,
    "compression": "maximum"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
